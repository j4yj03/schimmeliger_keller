import pycom
import time
from machine import Pin
from dth import DTH

pycom.heartbeat(False)
pycom.rgbled(0x000008) # blue


th = DTH(Pin('P13', mode=Pin.OPEN_DRAIN),0)

while True:

    
    result = th.read()

    print(result.is_valid(), result.error_code)

    if result.is_valid():
        pycom.rgbled(0x001000) # green
        print("Temperature: %d C" % result.temperature)
        print("Humidity: %d %%" % result.humidity)

    time.sleep(2)